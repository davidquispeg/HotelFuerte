{% extends '::frontend.html.twig' %}
{% block title %}Ubicanos {% endblock %}
{% block maps %}
<script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyAKIwPSFjoceTS2g2r17D-B9lQX_36rA5I"></script>
<script>
var myCenter = new google.maps.LatLng(-12.061284, -75.221227);
function initialize() {
  var mapProp = {
    center:myCenter,
    zoom:17,
    mapTypeId:google.maps.MapTypeId.ROADMAP
  };

  var map = new google.maps.Map(document.getElementById("googleMap"),mapProp);

  var marker = new google.maps.Marker({
  	position:myCenter,

  });
  marker.setMap(map);
  
}
google.maps.event.addDomListener(window, 'load', initialize);
</script>
{% endblock %}

